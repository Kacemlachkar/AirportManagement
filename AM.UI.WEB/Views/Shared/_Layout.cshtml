<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AM.UI.WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AM.UI.WEB.styles.css" asp-append-version="true" />

    <style>
        /* Additional CSS styles */
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
        }

        /* Styling for AM.UI.WEB */
        .brand-text {
            font-size: 2rem;
            font-weight: bold;
            color: #007bff; /* Change to your desired color */
        }

        /* Additional styles for navbar */
        .navbar-nav .nav-item .nav-link {
            color: #333;
            transition: color 0.3s ease; /* Adding transition for smooth color change */
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #007bff; /* Changing color on hover */
            }

        /* Additional styles for footer */
        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
        }

            .footer a {
                color: #6c757d;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-text">AM.</span>UI.WEB
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <!-- Change justify-content to end to move the navbar items to the right -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Flight" asp-action="Index">Flight</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Plane" asp-action="Index">Plane</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Passenger" asp-action="Index">Passenger</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Ticket" asp-action="Index">Ticket</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AM.UI.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
